extends layout

block content
  h1= title
  p Welcome to #{title}
  <a href="/new">New Message</a>

  ul
      each message in messages
          li= message.user
          p #{message.text}
          p #{message.createdAt}
          <form method= "POST" action= '/delete/#{message._id}'>
          <button type=submit>Delete</button>
          </form>
  
